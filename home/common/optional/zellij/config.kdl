    renametab {
        bind "Alt c" { SwitchToMode "Normal" ; }
        bind "Esc"   { UndoRenameTab ; SwitchToMode "Tab" ; }
    }
    renamepane {
        bind "Alt c" { SwitchToMode "Normal"; }
        bind "Esc" { UndoRenamePane; SwitchToMode "Pane"; }
    }
    session {
        bind "Alt o" { SwitchToMode "Normal" ; }
        bind "d"     { Detach ; }
        bind "w"     {
            LaunchOrFocusPlugin "session-manager" {
                floating true
                move_to_focused_tab true
            };
            SwitchToMode "Normal"
        }
    }
    shared_except "locked" {
        bind "Alt g"             { SwitchToMode "Locked" ; }
        bind "Alt q"             { Quit ; }
        // Focus
        bind "Alt h"             { MoveFocusOrTab "Left" ; }
        bind "Alt l"             { MoveFocusOrTab "Right" ; }
        bind "Alt j"             { MoveFocus "Down" ; }
        bind "Alt k"             { MoveFocus "Up" ; }
        bind "Alt -"             { FocusPreviousPane ; }
        bind "Alt 1"                 { GoToTab 1 ; }
        bind "Alt 2"                 { GoToTab 2 ; }
        bind "Alt 3"                 { GoToTab 3 ; }
        bind "Alt 4"                 { GoToTab 4 ; }
        bind "Alt 5"                 { GoToTab 5 ; }
        bind "Alt 6"                 { GoToTab 6 ; }
        bind "Alt 7"                 { GoToTab 7 ; }
        bind "Alt 8"                 { GoToTab 8 ; }
        bind "Alt 9"                 { GoToTab 9 ; }
        // Move
        bind "Alt H"             { MovePane "Left" ; }
        bind "Alt J"             { MovePane "Down" ; }
        bind "Alt K"             { MovePane "Up" ; }
        bind "Alt L"             { MovePane "Right" ; }
        //resize
        bind "Alt Left"          { Resize "Left" ; }
        bind "Alt Down"          { Resize "Down" ; }
        bind "Alt Up"            { Resize "Up" ; }
        bind "Alt Right"         { Resize "Right" ; }
        // Swap
        bind "Alt ["             { PreviousSwapLayout ; }
        bind "Alt ]"             { NextSwapLayout ; }
    }
    shared_except "normal" "locked" {
        bind "Enter" "Esc" { SwitchToMode "Normal" ; }
    }
    shared_except "pane" "locked" {
        bind "Alt p" { SwitchToMode "Pane" ; }
    }
    shared_except "scroll" "locked" {
        bind "Alt s" { SwitchToMode "Scroll" ; }
    }
    shared_except "session" "locked" {
        bind "Alt o" { SwitchToMode "Session" ; }
    }
    shared_except "tab" "locked" {
        bind "Alt t" { SwitchToMode "Tab" ; }
    }
}

plugins {
    compact-bar location="zellij:compact-bar" {
//       tooltip "Alt ;"
       tooltip "Alt /"
    }
}

ui {
    pane_frames {
        rounded_corners true
    }
}

pane_frames true
copy_on_select true
show_startup_tips false

default_layout "default"
